
.hot_content{
  padding: 0 25rpx 25rpx;
  border-bottom: 1px solid #F3F4F4;
}
.drive{
  height: 25rpx;
  background-color: #F3F4F4
}
.new_content{
  padding: 0 25rpx 25rpx;
  border-bottom: 1px solid #F3F4F4;
}
.title{
  padding: 0 25rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #999;
  font-size: 28rpx;
}

.user_box{
  display: flex;
  height: 80rpx;
  padding: 10rpx 0;
}
.user{
  flex: 4;
  display: flex;
  justify-content: flex-start;
}
.user_pic{
  width:80rpx;
  height: 80rpx;  
}
.profile_image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.user_name{
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 25rpx;
  color: #B5C8DD;  
}
.love{
  flex: 1;
  display: flex;
  align-items: center;
}
.bot_pic{
  flex: 1;
  display: flex;
  justify-content: flex-start;
}
.bot_pic image{
  width: 60rpx;
  height: 60rpx;
}
.do{
  flex: 1;
  color: #999;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.content_main{
  display: flex;
}
.grade{
  width: 80rpx;
  display: flex;
  align-items: flex-start;
}
.grade text{
  display: inline-block;
  width: 80rpx;
  height: 30rpx;
  color: #ffffff;
  background-color: #B5C8DD;
  text-align: center;
  font-size: 24rpx;
  line-height: 30rpx;
  border-radius: 15rpx;
}
.text{
  width: 630rpx;
  font-size: 32rpx;
  line-height: 48rpx;
  padding-left: 25rpx; 
}